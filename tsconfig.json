{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "dom"
        ],
        "plugins": [
            {
                "name": "@vuedx/typescript-plugin-vue"
            }
        ]
    },
    "include": [
        "resources/src/**/*.ts",
        "resources/src/js/**/*.d.ts",
        "resources/src/js/components/**/*.vue"
    ],
    "exclude": ["node_modules", ".vscode"]
}