{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext"],
        "plugins": [
            {
                "name": "@vuedx/typescript-plugin-vue"
            }
        ]
    },
    "include": [
        "components.d.ts",
        "auto-imports.d.ts",
        "resources/src/*.vue",
        "resources/src/*.ts",
        "resources/src/**/*.ts",
        "resources/src/**/*.vue"
    ],
    "exclude": ["node_modules", ".vscode"]
}
